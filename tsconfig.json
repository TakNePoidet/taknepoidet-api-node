{
	"compilerOptions": {
		"target": "ES2019",
		"sourceMap": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["ES2019"],
		"moduleResolution": "node",
		"types": ["node"],
		"incremental": true,
		"composite": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@lib/*": ["lib/*"],
			"@type/*": ["type/*"],
			"@interface/*": ["interface/*"],
			"@app/*": ["app/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["**/*.test.ts", "dist"]
}
